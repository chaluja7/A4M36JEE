<?xml version="1.0" encoding="UTF-8"?>
<faces-config
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
        version="2.0">

    <lifecycle>
        <phase-listener>cz.cvut.fel.utils.MultiPageMessagesSupport</phase-listener>
    </lifecycle>

    <navigation-rule>

        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/flights.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>flights</from-outcome>
            <to-view-id>/flights.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>flight</from-outcome>
            <to-view-id>/flight.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>book-it</from-outcome>
            <to-view-id>/book-it.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>reservation</from-outcome>
            <to-view-id>/reservation.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>pay-visa</from-outcome>
            <to-view-id>/pay-visa.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>pay-back</from-outcome>
            <to-view-id>/send-back.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>destinations</from-outcome>
            <to-view-id>/destinations.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>destination</from-outcome>
            <to-view-id>/destination.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/login</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/logout</to-view-id>
            <redirect/>
        </navigation-case>

    </navigation-rule>

</faces-config>
